FROM alpine:3.15

RUN	apk update && apk upgrade && apk add --no-cache \
        nginx \
        openssl

# nginx SSL
RUN mkdir /etc/nginx/ssl
RUN openssl req -newkey rsa:4096 -x509 -sha256 -days 365 -nodes \
        -out /etc/nginx/ssl/chilee.pem \
        -keyout /etc/nginx/ssl/chilee.key \
        -subj "/C=IT/ST=Rome/L=Rome/O=42 School/OU=raccoman/CN=chilee/"

# nginx config
RUN mkdir -p /run/nginx 
ADD conf/default.conf /etc/nginx/modules/default.conf

# Start nginx
ENTRYPOINT ["nginx", "-g", "daemon off;"]
